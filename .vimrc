syntax on
set number relativenumber
set nu rnu
set ft=xxd
set noswapfile
set hlsearch
set ignorecase
set incsearch
set statusline=
set statusline+=\ %M\ %Y\ %R 
set statusline+=%=
set statusline+=\ ascii:\ %b\ hex:\ 0x%B\ row:\ %l\ col:\ %c\ percent:\ %p%%
set laststatus=2

set cursorline
set nowrap
set showmode
set regexpengine=0

filetype on
filetype plugin on
filetype indent on

set t_Co=256
colors zenburn
